<h1>Alamat Pengiriman</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@order) do |f| %>
      <%= f.label :address, "Alamat" %>
      <%= f.text_area :address %>

      <%= f.label :pay_type %>
      <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Pilih metode pembayaran' %>

      <%= f.submit "Pesan Buku", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
