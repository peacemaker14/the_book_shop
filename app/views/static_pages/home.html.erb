<div class="center jumbotron">
  <h1>Welcome to The Book Shop</h1>
  <h2>Enjoy our new book collection!</h2>
  <% if @products.any? %>
    <ol class="showcase">
      <% @products.each do |product| %>
        <li>
          <%= link_to image_tag(product.image_url, class: 'list_image'), product %><br>
          <span class="title"><%= link_to product.title, product %></span><br>
          <span class="author">by <%= product.author %></span>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
